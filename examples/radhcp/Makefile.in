# Top level hierarchy

prefix = @prefix@
exec_prefix = @exec_prefix@
datarootdir = @datarootdir@
perlextlib = @PERL_EXT_LIB@

# Pathname of directory to install the system binaries
SBINDIR = @sbindir@
# Pathname of directory to install the system binaries
BINDIR = @bindir@
# Pathname of directory to install the include files
INCLDEST = @includedir@
# Pathname of directory to install the library
LIBDEST =  @libdir@
# Pathname of directory to install the man page
MANDEST = @mandir@

# VPATH
srcdir = @srcdir@
VPATH = @srcdir@

#
# You shouldn't need to edit anything below.
#

CC = @CC@
CCOPT = @V_CCOPT@
INCLS = -I. -I../../include -I../../common @V_INCLS_EXAMPLES@ @MYSQL_INCLS@
DEFS = @DEFS@
COMPATLIB = @COMPATLIB@ @LIB_SASL@ @LIB_XDR@ @LIBS@ @V_THREADS@ @V_GEOIPDEP@ @V_PCRE@ @V_FTDEP@ @ZLIB@ @WRAPLIBS@ @LIBMAXMINDDB_LIBS@

MYSQLLIB = @MYSQL_LDFLAGS@ 

# Standard CFLAGS
CFLAGS = $(CCOPT) $(INCLS) $(DEFS) $(EXTRA_CFLAGS)

INSTALL    = @INSTALL@
INSTALLBIN = ../@INSTALL_BIN@
INSTALLLIB = ../@INSTALL_LIB@
RANLIB     = @V_RANLIB@

#
# Flex and bison allow you to specify the prefixes of the global symbols
# used by the generated parser.  This allows programs to use lex/yacc
# and link against libpcap.  If you don't have flex or bison, get them.
#
LEX = @V_LEX@
YACC = @V_YACC@

# Explicitly define compilation rule since SunOS 4's make doesn't like gcc.
# Also, gcc does not remove the .o before forking 'as', which can be a
# problem if you don't own the file but can write to the directory.
.c.o:
	@rm -f $@
	$(CC) $(CFLAGS) -c $(srcdir)/$*.c

LIB = $(INSTALLLIB)/argus_parse.a $(INSTALLLIB)/argus_common.a \
      $(INSTALLLIB)/argus_client.a $(INSTALLLIB)/argus_timer.a

SRC =	radhcp.c rabootp.c rasql.c rabootp_memory.c rabootp_client_tree.c \
	rabootp_fsa.c rabootp_update.c \
	rabootp_callback.c \
	rabootp_timer.c \
	rabootp_proto_timers.c \
	rabootp_interval_tree.c \
	rabootp_print.c \
	argus_format_json.c \
	rabootp_l2addr_list.c \
	rabootp_patricia_tree.c \
	rabootp_lease_pullup.c \
	rabootp_querystr.c \
	rabootp_sql_bind.c \
	rabootp_sql_scan.c \
        rabootp_sql.c

PROGS = $(INSTALLBIN)/radhcp
ifndef WORKSTATION_BUILD
ifneq ("@ARGUS_MYSQL@","")
SCRIPTS = $(INSTALLBIN)/radhcp-query
DHCPLIB = argus_dhcp.a
DHCPLIB_OBJ = \
	argus_dhcp.o \
	rasql_result_bind.o \
	rabootp_lease_pullup.o \
	rasql_prepared_query.o \
	rabootp_memory.o \
	rabootp_print.o \
	rabootp_sql_scan.o \
	rabootp_sql_bind.o \
	rasql_common.o
DHCPLIB_EXAMPLE = example-libargus_dhcp
DHCPLIB_EXAMPLE_OBJ = \
        argus_format_json.o \
	example-libargus_dhcp.o
PROGS += $(DHCPLIB_EXAMPLE)
endif
endif

# We would like to say "OBJ = $(SRC:.c=.o)" but Ultrix's make cannot
# hack the extra indirection
 
OBJ =	$(SRC:.c=.o)

all: $(PROGS) $(SCRIPTS) $(DHCPLIB)

$(INSTALLBIN)/radhcp: $(OBJ) $(LIB)
	$(CC) $(CFLAGS) -o $@ $(OBJ) $(MYSQLLIB) $(LIB) $(COMPATLIB)

ifndef WORKSTATION_BUILD
example-libargus_dhcp: $(DHCPLIB_EXAMPLE_OBJ) \
                       argus_dhcp.a
	$(CC) $(CFLAGS) -o $@ $^ $(MYSQLLIB) $(LIB) $(COMPATLIB)

$(DHCPLIB): $(DHCPLIB_OBJ)
	rm -f $@; $(AR) qc $@ $^
	-$(RANLIB) $@
rasql_common.o: ../ramysql/rasql_common.c
	@rm -f $@
	$(CC) $(CFLAGS) -c $^
rasql_result_bind.o: ../ramysql/rasql_result_bind.c
	$(CC) $(CFLAGS) -c $^
rasql_prepared_query.o: ../ramysql/rasql_prepared_query.c
	$(CC) $(CFLAGS) -c $^
endif

$(INSTALLBIN)/radhcp-query: radhcp-query
	$(INSTALL) -m 0755 $^ $@

# Need to clean radhcp-query from both $(INSTALLBIN) and $PWD
CLEANFILES = $(OBJ) $(PROGS) $(SCRIPTS) $(DHCPLIB) $(DHCPLIB_OBJ) \
             $(DHCPLIB_EXAMPLE_OBJ) \
             $(DHCPLIB_EXAMPLE)

.PHONY: install
install: force all install-perl
	[ -d $(DESTDIR) ] || \
		(mkdir -p $(DESTDIR); chmod 755 $(DESTDIR))

	[ -d $(BINDIR) ] || \
		(mkdir -p $(BINDIR); chmod 755 $(BINDIR))

	$(INSTALL) $(INSTALLBIN)/radhcp $(DESTDIR)$(BINDIR)
	$(INSTALL) $(INSTALLBIN)/radhcp-query $(DESTDIR)$(BINDIR)

install-perl:
ifndef WORKSTATION_BUILD
	@set -e ; \
	mkdir -p $(DESTDIR)$(perlextlib)/qosient ; \
	$(INSTALL) -m 0644 radhcp.pm \
	           $(DESTDIR)$(perlextlib)/qosient/radhcp.pm
endif

uninstall: force all uninstall-perl
	rm -f $(DESTDIR)$(BINDIR)/radhcp
	rm -f $(DESTDIR)$(BINDIR)/radhcp-query

uninstall-perl:
	rm -f $(DESTDIR)$(perlextlib)/qosient/radhcp.pm

clean:
	rm -f $(CLEANFILES)

distclean:
	rm -f $(CLEANFILES) Makefile config.cache config.log config.status \
	    gnuc.h os-proto.h bpf_filter.c net \
	    radhcp-query

tags: $(TAGFILES)
	ctags -wtd $(TAGFILES)

tar:	force
	@cwd=`pwd` ; dir=`basename $$cwd` ; name=libpcap-`cat VERSION` ; \
	    list="" ; tar="tar chFFf" ; \
	    for i in `cat FILES` ; do list="$$list $$name/$$i" ; done; \
	    echo \
	    "rm -f ../$$name; ln -s $$dir ../$$name" ; \
	     rm -f ../$$name; ln -s $$dir ../$$name ; \
	    echo \
	    "(cd .. ; $$tar - [lots of files]) | compress > /tmp/$$name.tar.Z" ; \
	     (cd .. ; $$tar - $$list) | compress > /tmp/$$name.tar.Z ; \
	    echo \
	    "rm -f ../$$name" ; \
	     rm -f ../$$name

force:	/tmp
depend:	$(GENSRC) force
	../../bin/mkdep -c $(CC) $(DEFS) $(INCLS) $(SRC)
