<?xml version="1.0" encoding="utf-8" standalone="no"?>
<installer-gui-script minSpecVersion="1">
    <title>Argus-Clients</title>
    <organization>com.qosient</organization>
    <domains enable_localSystem="true"/>
    <options customize="never" require-scripts="true" rootVolumeOnly="true" />
    <!-- Define documents displayed at various steps -->
    <background file="Gargoyle.png"    mime-type="image/png" />
    <welcome    file="welcome.html"    mime-type="text/html" />
    <license    file="license.html"    mime-type="text/html" />
    <conclusion file="conclusion.html" mime-type="text/html" />

    <!-- List all component packages -->
    <pkg-ref id="com.qosient.argus-clients"
             version="0"
             auth="root">output.pkg</pkg-ref>
    <!-- List them again here. They can now be organized
         as a hierarchy if you want. -->
    <choices-outline>
        <line choice="com.qosient.argus-clients"/>
    </choices-outline>
    <!-- Define each choice above -->
    <choice
        id="com.qosient.argus-clients"
        visible="false"
        title="argus-clients"
        description="Argus Clients"
        start_selected="true">
      <pkg-ref id="com.qosient.argus-clients"/>
    </choice>
</installer-gui-script>
